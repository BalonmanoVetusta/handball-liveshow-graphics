{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "local": {
      "type": "object",
      "properties": {
        "goals": {
          "type": "number",
          "default": 0
        },
        "timeouts": {
          "type": "number",
          "default": 0
        },
        "warnings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "time": {
                "type": "number"
              },
              "type": {
                "enum": [
                  "2minute",
                  "yellow-card",
                  "red-card",
                  "blue-card"
                ]
              },
              "player": {
                "type": [
                  "number",
                  "string",
                  "null"
                ]
              }
            }
          }
        }
      }
    },
    "visitor": {
      "type": "object",
      "properties": {
        "goals": {
          "type": "number",
          "default": 0
        },
        "timeouts": {
          "type": "number",
          "default": 0
        },
        "warnings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "time": {
                "type": "number"
              },
              "type": {
                "enum": [
                  "2minute",
                  "yellow-card",
                  "red-card",
                  "blue-card"
                ]
              },
              "player": {
                "type": [
                  "number",
                  "string",
                  "null"
                ]
              }
            }
          }
        }
      }
    }
  }
}